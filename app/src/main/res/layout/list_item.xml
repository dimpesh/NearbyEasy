<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/item_margin"
    android:layout_marginBottom="@dimen/item_margin_bottom"
    android:layout_marginTop="@dimen/item_margin_top"
    android:orientation="horizontal"
    >


<ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/item_icon_width"
        android:layout_height="@dimen/item_icon_height"
        android:scaleType="centerCrop"
        android:padding="@dimen/icon_padding"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/list_item_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/item_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_vicinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/colorBlue"
                android:text="@string/list_item_subtitle" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>